{{define "content"}}

<div class="container equipgrid">
  <div class="row abstandTop20">
    <div class="col headline2">
      <h3 style="font-weight: bold ">Equipment verwalten</h3>
    </div>
    <div class="col headline2">
      <a href="/admin/add"><button type="button" class="btn btn-primary">Equipment hinzufügen</button></a>
    </div>
    <div class="col searchbar">
      <small>Kategorie</small>
      <div><input type="text " placeholder="Suche ">
        <select name=" " id="kategorie ">
        <option selected>Alle</option>
        <option value="Kamera">Kameras</option>
        <option value="2 ">Objektive</option>
        <option value="3 ">Mikrofone</option>
        <option value="4 ">Stative</option>
      </select></div>

    </div>
  </div>

</div>

<div class="container myequipgrid">
  <div class="row beschr abstandGrid">
    <div class="col-4 beschrFont">
      Equipment
    </div>
    <div class="col-3 beschrFont">
      Beschreibung
    </div>
    <div class="col-5 beschrFont">
      Status
    </div>
  </div>
  <div>
    <hr>
  </div>
  {{range .Items}}
  <div class="row cartgrid abstandGrid">
    <div class="col-4 cartprod">
      <div class="row">
        <div class="col">
          <img src="{{.Bild}}" alt="img" class="festeGroesse150x150">
        </div>
        <div class="col">
          <h5>{{.Name}}</h5>
          <small>ID: {{.ID}}</small>
        </div>
      </div>
    </div>
    <div class="col-3 beschreibung">
      <p>{{.Inhalt}}</p>
    </div>
    <div class="col-2 entl">
      Entliehen an: <br> <span class="borgdir-color">{{.EntliehenAn}}</span>
    </div>
    <div class="col-2 rueckgbis">
      Rückgabe: <br> <span class="borgdir-color">{{.Rueckgabe}}</span>
    </div>
    <div class="col-1 verl">
      <form action="/admin/equipment" method="post">
        <div class=row>
          <button name="edit" value="2" class="btn-icon"><i class="fas fa-pencil-alt iconspez" ></i></button>
          <button name="loeschen" value="1" class="btn-icon"><i class="far fa-trash-alt iconspez " ></i></button>
        </div>
      </form>
    </div>
  </div>
  {{end}}
</div>

{{end}}